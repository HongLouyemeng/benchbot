FILENAME_ENV_METADATA=".benchbot_data_files"

GIT_BENCHBOT="git@bitbucket.org:acrv/benchbot"
GIT_SIMULATOR="git@bitbucket.org:acrv/benchbot_simulator"
GIT_SUPERVISOR="git@bitbucket.org:acrv/benchbot_supervisor"

